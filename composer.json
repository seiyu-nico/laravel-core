{
    "name": "seiyu-nico/laravel-core",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SeiyuNico\\LaravelCore\\": "src/"
        }
    },
    "authors": [
        {
            "name": "seiyu-nico"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": ">=8.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SeiyuNico\\LaravelCore\\Providers\\LaravelCoreProviders"
            ]
        }
    },
    "require-dev": {
        "laravel/pint": "^1.4",
        "phpstan/phpstan": "^1.9"
    },
    "scripts": {
        "pint": "./vendor/bin/pint -v",
        "check-pint": "./vendor/bin/pint --test",
        "phpstan": "./vendor/bin/phpstan analyse --xdebug"

    }
}
